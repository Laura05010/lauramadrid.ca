<div class="col">
  <div class="card h-100">
    {% if project.img %}
      {%
        include figure.liquid
        loading="eager"
        path=project.img
        sizes = "250px"
        alt="project thumbnail"
        class="card-img-top"
        zoomable=true
      %}
    {% endif %}
    <div class="card-body">
      <h2 class="card-title">{{ project.title }}</h2>
      <h6 class="card-title">{{ project.subtitle }}</h6>
      <p class="card-text">{{ project.description }}</p>
    </div>
  </div>
</div>